{
	"extends": "@repo/typescript-config/base.json",
	"compilerOptions": {
		"types": ["jest"],
		"typeRoots": ["./node_modules/@types", "./types"],
		"plugins": [
			{
				"name": "mqtt_backend"
			}
		],
		"paths": {
			"@/*": ["./src/*"],
			"@@/*": ["./*"],
			"@test/*": ["./test/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules"]
}
